@model List<Category> 

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        @* class "row" creates a bootstap grid, the class "col-6" means the div covers 6 columns out of the 12 given in a bootstrap grid
        pt is padding top, pb is padding bottom
        *@
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                @* Creates a button that once pressed, links to the action Create in the Category controller *@
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>

        @* Table to display a list of categories *@
        <table class="table table-bordered table-striped">
            @* Table header with column names *@
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @* Iterate over each category in the model and display its name and display name *@
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    @* Table row for each category *@
                    <tr>
                        @* Display category name *@
                        <td>@obj.Name</td>
                        @* Display category display order *@
                        <td>
                            @obj.DisplayOrder
                        </td>
                        @* Column for Edit and Delete buttons *@
                        <td>
                            @* Button group for Edit and Delete buttons *@
                            <div class="w-75 btn-group" role="group">
                                @* Creates 2 buttons for the Category controller actions Edit and Delete *@
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>